<UserControl x:Class="GumPlugin.Controls.GumToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200">
    <Grid>
        <Button Width="22" Height="22" Click="HandleButtonClick">
            <Grid>
                <Image ToolTip="Add Gum Project to this Game" Visibility="{Binding AddGumProjectVisibility}" Source="/GumPluginCore;component/Icons/AddGumProject.png"></Image>
                <Image ToolTip="Open Gum" Visibility="{Binding OpenGumVisibility}" Source="/GumPluginCore;component/Icons/GumIcon.png"></Image>
            </Grid>
        </Button>
    </Grid>
</UserControl>
