<UserControl x:Class="OfficialPlugins.PreviewGenerator.Views.MainPreviewGeneratorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:localization="clr-namespace:Localization;assembly=Localization"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="Image"></Image>
        <Button Click="Button_Click" Grid.Row="1" Content="{x:Static localization:Texts.Execute}" />
        <Button Click="SaveItClicked" Grid.Row="2" Content="{x:Static localization:Texts.Save}" />
    </Grid>
</UserControl>
